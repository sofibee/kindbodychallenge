
<h1>Patients List</h1>

<table>
  <tr>
    <th>Fist Name</th>
    <th>Last Name</th>
    <th>DOB</th>
    <th></th>
  </tr>

  <% @patients.each do |patient| %>
    <tr>
      <td><%= patient.first_name %></td>
      <td><%= patient.last_name %></td>
      <td><%= patient.dob %></td>
      <td><%= link_to 'Show Patient Details', patient_path(patient) %></td>
    </tr>
  <% end %>
</table>
